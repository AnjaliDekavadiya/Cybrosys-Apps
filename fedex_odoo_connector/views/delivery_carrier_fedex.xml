<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form_with_provider_fedex"
            model="ir.ui.view">
        <!--Creating the form view of fedex shipping connector-->
        <field name="name">delivery.carrier.form.provider.fedex</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Fedex Configuration" name="fedex_configuration"
                      invisible="delivery_type != 'fedex_api'">
                   <group>
                        <group>
                            <field name="fedex_developer_key" required="delivery_type == 'fedex_api'"/>
                            <field name="fedex_developer_pwd" required="delivery_type == 'fedex_api'"/>
                            <field name="fedex_account_number" string="Account Number" required="delivery_type == 'fedex_api'"/>
                            <field name="fedex_service_type" required="delivery_type == 'fedex_api'"/>
                        </group>
                        <group>
                            <field name="fedex_default_package_type_id" required="delivery_type == 'fedex_api'"/>
                            <field name="fedex_weight_unit" string="Package Weight Unit" required="delivery_type == 'fedex_api'"/>
                            <div class="o_td_label">
                                <span class="o_form_label">Package Length Unit</span>
                            </div>
                            <div class="o_field_widget">
                                <span invisible="fedex_weight_unit != 'KG'">CM</span>
                                <span invisible="fedex_weight_unit != 'LB'">IN</span>
                            </div>
                            <field name="fedex_label_stock_type" required="delivery_type == 'fedex_api'"/>
                            <field name="fedex_label_file_type" string="Label Format" required="delivery_type == 'fedex_api'"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
